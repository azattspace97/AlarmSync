<ripple xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/sign_radius"
                android:bottomLeftRadius="@dimen/sign_radius"
                android:topLeftRadius="@dimen/sign_radius"
                android:topRightRadius="@dimen/sign_radius"/>
